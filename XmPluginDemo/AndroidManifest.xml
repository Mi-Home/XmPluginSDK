<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaomi.xmplugindemo"
    android:versionCode="28"
    android:versionName="0.1.28" >

     <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 支持插件的最低版本，必须 -->
        <meta-data
            android:name="minPluginSdkApiVersion"
            android:value="2" />
        <!-- 设备model，必须 -->
        <meta-data
            android:name="model"
            android:value="xiaomi.demo.v1" />
        <!-- 设备处理消息入口，必须 -->
        <meta-data
            android:name="message_handler"
            android:value="com.xiaomi.xmplugindemo.MessageReceiver" />
        <!-- 设备场景配置信息，可选 -->
        <meta-data
            android:name="SHPluginSceneInfo"
            android:value="@string/plugin_scene_info" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ControlActivity" >
        </activity>
    </application>

</manifest>
